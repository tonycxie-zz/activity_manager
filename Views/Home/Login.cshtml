@model LoginUser

<h2>Login here!</h2>
<form asp-action="Signin" asp-controller="Home" method="post">
    <span asp-validation-for="LoginEmail"></span>
    <label asp-for="LoginEmail" class="control-label">Email</label>
    <input asp-for="LoginEmail" class="form-control">
    <span asp-validation-for="LoginPassword"></span>
    <label asp-for="LoginPassword" class="control-label">Password</label>
    <input asp-for="LoginPassword" class="form-control">
    <button type="submit" class="btn btn-success">Login!</button>
</form>